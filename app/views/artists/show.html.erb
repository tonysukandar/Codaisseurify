<div class="row">
  <div class="col-md-9">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h1>All the songs of <%= @artist.name %></h1>
      </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-3 text-center"><h4>Song name</h4></div>
            <div class="col-md-3 text-center"><h4>Release year</h4></div>
            <div class="col-md-3 text-center"><h4>Genre</h4></div>
            <div class="col-md-3 text-center"><h4> &nbsp; </h4><br/></div>
        <% @artist.songs.each do |song| %>
        <div class="row">
          <div class="col-md-3">
              <h4><%= song.song_name %></h4>
          </div>
          <div class="col-md-3 text-center">
              <h4><%= song.release_year %></h4>
          </div>
          <div class="col-md-3 text-center">
              <h4><%= song.genre %></h4>
          </div>
          <div class="col-md-3 text-center">
            <h4><%= link_to "Edit", edit_artist_song_path(@artist.id,song), class: "btn btn-primary" %>
            <%= link_to "Delete", artist_song_path(@artist,song), class: "btn btn-primary", method: :delete, data: { confirm: "Are you sure?" } %></h4>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <%= link_to "Back", artists_path, class: "btn btn-primary" %>
  <%= link_to "Add new song", new_artist_song_path(@artist), class: "btn btn-primary" %><br/>
  <%= button_tag 'Delete All Songs', id: "deleteAllTheSongs", class: "btn btn", onclick: 'removeAllTheSongs(@artist.id)' %>
</div>
