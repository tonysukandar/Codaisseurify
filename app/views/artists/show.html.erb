<div class="row">
  <div class="col-md-9">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h1>All the songs of <%= @artist.name %></h1>
      </div>
        <div class="panel-body">
        <% @artist.songs.each do |song| %>
        <div class="row">
          <div class="col-md-10">
              <h3><%= song.song_name %></h3>
          </div>
          <div class="col-md-2">
            <h3><%= link_to "Delete", artist_song_path(@artist,song), class: "btn btn-primary", method: :delete, data: { confirm: "Are you sure?" } %></h3>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    <%= link_to "Back", artists_path, class: "btn btn-primary" %>
    <%= link_to "Add new song", new_artist_song_path(@artist), class: "btn btn-primary" %>
  </div>
</div>
