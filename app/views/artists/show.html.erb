<h1>Show#artists</h1>
<div class="row">
  <div class="col-md-9">
    <div class="panel panel-primary">
      <div class="panel-heading">
        All the songs of <%= @artist.name %>
      </div>
      <div class="panel-body">
        <% @songs.each do |song| %>
        <div class="row">
          <div class="col-md-9">
            <h4><%= song.song_name %></h4>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    <%= link_to "Add new song", new_artist_song_path(@artist), class: "btn btn-primary" %>
  </div>
</div>
